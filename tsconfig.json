{
	"compilerOptions": {
		"jsx": "react-jsx",
		"target": "ESNext",
		"allowJs": true,
		"module": "ESNext",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"baseUrl": ".",
		"noEmit": true,
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"strict": true,
		"typeRoots": [
			"./node_modules/@types"
		]
	},
	"include": [
		"./src/**/*.ts",
		"./src/**/*.tsx",
	],
	"ts-node": {
		"esm": true,
	},
}